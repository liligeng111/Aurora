<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "top" %>

  <% if params[:controller] == 'devise/sessions' %>
    <% con = 'devise/registrations' %>
  <% else %>
    <% con = params[:controller] %>
  <% end %>

  <% if params[:action] == 'create' %>
  	<%= stylesheet_link_tag con + "/new", "data-turbolinks-track" => true %>
  <% else %>  	
  	<%= stylesheet_link_tag con + "/" + params[:action], "data-turbolinks-track" => true %>
  <% end %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
<p class="devise_alert"><%= flash[:alert] %><%= flash[:notice] %></p>
<%= render 'top' %>

<script Language="JavaScript"> 
$(document).ready(function() 
{
	run_top();
});
</script> 

<%= yield %>

<%= render 'footer' %>

</body>
</html>
