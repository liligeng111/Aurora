<!DOCTYPE html>
<html>
<head>
	<%= stylesheet_link_tag "top" %>

	<% path = params[:controller] + "/" + params[:action]%>
	<% case path %>
		<% when 'devise/registrations/new', 'devise/registrations/create', 'devise/sessions/new', 'devise/sessions/create' %>
			<%= stylesheet_link_tag "devise/registrations/new", "data-turbolinks-track" => true %>
		<% else %>    
			<%= stylesheet_link_tag  path, "data-turbolinks-track" => true %>
		<% end %>

	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
	<%= yield :head %>
</head>

<body>
	<p class="devise_alert"><%= flash[:alert] %><%= flash[:notice] %></p>
	<%= render 'top' %>

	<script Language="JavaScript"> 
	$(document).ready(function() 
	{
			run_top();
	});
	</script> 

	<%= yield %>

	<%= render 'footer' %>

</body>
</html>
