<div class="window">
	<div class="sign_up">
		<h1>欢迎加入我们</h1>
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>

			<div class="item"><%= f.label :email, '邮箱'%>
			<%= f.email_field :email, :autofocus => true %></div>

			<div class="item"><%= f.label :password, '密码' %>
			<%= f.password_field :password %></div>

			<div class="item"><%= f.label :password_confirmation, '确认密码' %>
			<%= f.password_field :password_confirmation %></div>

			<div class="button"><%= f.submit "注册" %></div>
		<% end %>
	</div>

	<div class="links">

	  已有账号？ <%= link_to "登陆", new_session_path(resource_name) %><br />
	</div>

	<div style="clear: both;"></div>
</div>
